<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaterialDesing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- FAB -->
        <item name="colorOnPrimaryContainer">@color/bnv_default</item>

        <!-- Chip -->
        <item name="chipStyle">@style/MyChipStile</item>

        <!-- fragment из файла attrs.xml-->
        <item name="default_fon_fragment">@color/light_turquoise</item>
        <item name="button_background">@color/dark_green</item>
        <item name="default_text">@color/black</item>

        <item name="ic_background">@color/orange_500</item>

        <item name="big_text">@dimen/default_text_size</item>

    </style>

    <style name="Theme.MyTestDesing" parent="Base.Theme.MaterialDesing" />

    <!-- создан свой стиль -->
    <style name="MyChipStile" parent="Widget.Material3.Chip.Suggestion">

        <item name="chipBackgroundColor">@color/bnv_default</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
    </style>


    <style name="PinkTheme" parent="Base.Theme.MaterialDesing">

        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_light</item>

        <item name="android:textColorPrimary">@color/indigo_light</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- fragment из файла attrs.xml-->
        <item name="default_fon_fragment">@color/white_pink</item>
        <item name="button_background">@color/pink_light</item>
        <item name="default_text">@color/pink_dark</item>

        <item name="ic_background">@color/orange_500</item>

        <item name="big_text">@dimen/default_text_size</item>
    </style>

    <style name="WhiteTheme" parent="Base.Theme.MaterialDesing">

        <item name="colorPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/indigo_light</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- fragment из файла attrs.xml-->
        <item name="default_fon_fragment">@color/white</item>
        <item name="button_background">@color/light_turquoise</item>
        <item name="default_text">@color/black</item>

        <item name="ic_background">@color/orange_500</item>

        <item name="big_text">@dimen/default_text_size</item>
    </style>

    <style name="GreenTheme" parent="Base.Theme.MaterialDesing">

        <item name="colorPrimary">@color/black</item>

        <item name="android:textColorPrimary">@color/indigo_light</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- fragment из файла attrs.xml-->
        <item name="default_fon_fragment">@color/white_green</item>
        <item name="button_background">@color/green</item>
        <item name="default_text">@color/black</item>

        <item name="ic_background">@color/orange_500</item>

        <item name="big_text">@dimen/default_text_size</item>
    </style>

    <style name="SplashTheme" parent="Base.Theme.MaterialDesing">
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>

</resources>